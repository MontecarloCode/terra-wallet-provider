{
  "name": "vite-template",
  "version": "1.0.0",
  "scripts": {
    "app:dev": "vite --open",
    "dev": "vite",
    "start": "multiplerun dev",
    "build": "tsc --noEmit && vite build",
    "test": "react-scripts test --colors",
    "coverage": "react-scripts test --colors --coverage",
    "precommit": "lint-staged"
  },
  "multiplerun": {
    "dev": [
      "yarn run tsc --watch --noEmit",
      "yarn run app:dev"
    ]
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "cross-env CI=true react-scripts test --colors --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!**/*.d.ts?(x)",
      "!**/*.stories.ts?(x)",
      "!**/__*__/**"
    ]
  },
  "dependencies": {
    "@terra-money/terra.js": "^3.0.1",
    "@terra-money/wallet-provider": "^3.6.0",
    "buffer": "^6.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "styled-components": "^5.3.3",
    "vite-compatible-readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.2.2",
    "@testing-library/jest-dom": "^5.15.0",
    "@types/node": "^16.11.7",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "cross-env": "^7.0.3",
    "lint-staged": "^11.2.6",
    "multiplerun": "^2.0.1",
    "react-scripts": "^4.0.3",
    "typescript": "^4.4.4",
    "vite": "^2.6.14",
    "vite-plugin-svgr": "^0.5.1",
    "vite-tsconfig-paths": "^3.3.17"
  }
}
