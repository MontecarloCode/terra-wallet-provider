{
  "name": "vite-template",
  "version": "1.0.0",
  "scripts": {
    "app:dev": "vite --open",
    "start": "multiplerun dev",
    "build": "tsc --noEmit && vite build",
    "test": "react-scripts test --colors",
    "coverage": "react-scripts test --colors --coverage",
    "precommit": "lint-staged"
  },
  "multiplerun": {
    "dev": [
      "yarn run tsc --watch --noEmit",
      "yarn run app:dev"
    ]
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "cross-env CI=true react-scripts test --colors --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!**/*.d.ts?(x)",
      "!**/*.stories.ts?(x)",
      "!**/__*__/**"
    ]
  },
  "dependencies": {
    "@terra-money/terra.js": "^1.8.8",
    "@terra-money/wallet-provider": "^1.2.3",
    "buffer": "^6.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@peculiar/webcrypto": "^1.1.7",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/node": "^16.3.3",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "cross-env": "^7.0.3",
    "lint-staged": "^11.0.1",
    "multiplerun": "^2.0.1",
    "react-scripts": "^4.0.3",
    "typescript": "^4.3.5",
    "vite": "^2.4.2",
    "vite-plugin-svgr": "^0.3.0",
    "vite-tsconfig-paths": "^3.3.13"
  }
}
