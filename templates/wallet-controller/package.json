{
  "name": "without-react-template",
  "version": "1.0.0",
  "scripts": {
    "app:dev": "vite --open",
    "dev": "vite",
    "start": "multiplerun dev",
    "build": "tsc --noEmit && vite build",
    "test": "react-scripts test --colors",
    "coverage": "react-scripts test --colors --coverage",
    "precommit": "lint-staged"
  },
  "multiplerun": {
    "dev": [
      "yarn run tsc --watch --noEmit",
      "yarn run app:dev"
    ]
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "cross-env CI=true react-scripts test --colors --findRelatedTests"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!**/*.d.ts?(x)",
      "!**/*.stories.ts?(x)",
      "!**/__*__/**"
    ]
  },
  "browserslist": {
    "production": [
      "chrome > 60",
      "firefox > 60",
      "safari > 12"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@terra-money/terra.js": "^3.0.1",
    "@terra-money/wallet-controller": "^3.4.0",
    "buffer": "^6.0.3",
    "lit-html": "^2.0.2",
    "vite-compatible-readable-stream": "^3.6.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "cross-env": "^7.0.3",
    "lint-staged": "^11.2.6",
    "multiplerun": "^2.0.1",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.4",
    "vite": "^2.6.14",
    "vite-tsconfig-paths": "^3.3.17"
  }
}
